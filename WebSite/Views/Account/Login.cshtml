<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="ltr" lang="zh-TW" itemscope itemtype="http://schema.org/Blog">
<!--<![endif]-->
<head>
    <!--[if lt IE 9]>
    <script src="js/html5.js"></script>
    <![endif]-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="author" content="海棠設計">
    <meta name="keywords" content="">
    <meta name="description" content="">

    <title>後端管理系統</title>
    <link href="@Url.Content("~/Manage/css/index.css")" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Manage/js/rollover.js")"></script>
   
</head>

<body>
<script>
    function goSubmit() {
        $("#formA").submit();
    }
    function gerimg() {
        $.post('/Account/GerImgGo', {},
               function (fn, textStatus, jqXHR) {
                   //data: Received from server
                   if (fn != "") {
                       $('#imgimg1').attr('src', "/File/Get?FileId="+fn);
                   } else {
                       alert("發生錯誤請通知IT");
                   }
               });
    }
</script>
<div id="WRAPPER">
    <article id="CONTENT">
       @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @id = "formA" }))
       {
           <table width="100%" border="0" cellspacing="0" cellpadding="0">
               <tr>
                   <td width="52" height="26" align="left">帳&nbsp;&nbsp;&nbsp;&nbsp;號：</td>
                   <td colspan="2" align="left" style="background-image: url(/manage/images/main_input_bg.jpg); background-repeat: no-repeat; padding-left: 8px; background-position: left 3px;">

                       <input type="text" name="Account" id="Account" style="color: #fff; width: 132px; height: 14px; border: 0; background-color: #fc958d;"/>

                   </td>
               </tr>
               <tr>
                   <td height="26" align="left">密&nbsp;&nbsp;&nbsp;&nbsp;碼：</td>
                   <td colspan="2" align="left" style="background-image: url(/manage/images/main_input_bg.jpg); background-repeat: no-repeat; padding-left: 8px; background-position: left 3px;">

                       <input type="password" name="Password" id="Password" style="color: #fff; width: 132px; height: 14px; border: 0; background-color: #fc958d;"/>

                   </td>
               </tr>
               <tr>
                   <td height="45" align="left">驗證碼：</td>
                   <td width="54" align="left" valign="top" style="background-image: url(/manage/images/main_input_bg2.jpg); background-repeat: no-repeat; background-position: left 11px; padding-left: 4px; padding-top: 10px;">
                      
                           <input type="text" name="textfield2" id="textfield2" style="font-size: 11px; color: #fff; width: 44px; height: 14px; border: 0; background-color: #fc958d;"/>
                     
                   </td>
                   <td width="104"><a href="javascript:;" onclick="gerimg()"><img id="imgimg1" src="@Url.Content("~/File/Get?FileId=ttt.jpeg")" width="100" height="35"></a></td>
               </tr>
               <tr>
                   <span style="color:white">
                       @Html.ValidationMessage("message")
                   </span>
                   <td height="58" colspan="3" align="left" valign="top" style="padding-top: 11px; padding-left: 57px;">
                       <a onclick="goSubmit()"><img src="/manage/images/btn_login.jpg" width="106" height="47" class="imgover"></a>
                   </td>
               </tr>
           </table>
       }
</article>
</div>
</body>
</html>

