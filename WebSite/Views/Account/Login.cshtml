@model Begonia.Toyota.WebSite.ViewModels.LoginPage
@{
    Layout = null;
}

<!doctype html>
<!--[if lt IE 7 ]> <html dir="ltr" lang="zh-TW" class="ie6"> <![endif]-->
<!--[if IE 7 ]>    <html dir="ltr" lang="zh-TW" class="ie7"> <![endif]-->
