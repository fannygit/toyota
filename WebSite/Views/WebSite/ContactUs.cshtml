    var onSubmit = function (token) {
        $('#captchaToken').val(token);
    };
    var onloadCallback = function () {
        grecaptcha.render('reCAPTCHA', {
            'sitekey': '@System.Configuration.ConfigurationManager.AppSettings["siteKey"]', // 這邊填寫自己的site_key
            'callback': onSubmit // 執行成功後onSubmit變數接收
        });
    };

    $(function () {
        var msg = '@TempData["msg"]';
        if (msg != '')
        {
            alert(msg);
        }
    });
    function goSubmit() {
        if ($("#Namea").val() == '') {
            alert("姓名為必填");
        } else if ($("#ServiceUnit").val() == '') {
            alert("服務單位為必填");
        } else if ($("#Email").val() == '') {
            alert("Email為必填");
        } else if (!checkEmail($("#Email").val())) {
            alert("Email格式錯誤");
        } else if ($("#Tel").val() == '') {
            alert("聯絡電話為必填");
        } else if ($("#Detail").val() == '') {
            alert("問題描述為必填");
        } else if (!$("#checkbox").prop("checked")) {
            alert("請先同意隱私權保護聲明");
        } else {
            alert("訊息發送成功！我們會儘速和您聯繫！或撥打服務專線：0800-221-456");
            $("#f1").submit();
        }
    }

    function checkEmail(remail) {
        if (remail.search(/^[\w-]+(\.[\w-]+)*@@[\w-]+(\.[\w-]+)+$/)!=-1) {
            return true;
        } else {
            return false;
        }
    }

    function validINT(val) {
        var re = /^\d+$/;
        if (val != "" && !re.test(val)) {
            return false;
        } else {
            return true;
        }
    }

    function goClear() {

        $("#f1")[0].reset();
    }
</script>

