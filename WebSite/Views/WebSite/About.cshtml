@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_LayoutWebSite.cshtml";
}
@model Begonia.Toyota.WebSite.Models.AboutModel

<link rel="stylesheet" href="/Content/css/pages.css">

<script>
    $(function(){
        slidesToShow();
    })

    function slidesToShow()
    {
        $('.menu_container').find('#item_container').find('.item').eq(0).addClass('active');
        $('.honor-year').slick({
            centerMode: true,
            centerPadding: '0',
            slidesToShow: 3,
            focusOnSelect: true,
            responsive: [
              {
                  breakpoint: 768,
                  settings: {
                      arrows: true,
                      centerMode: true,
                      centerPadding: '0',
                      slidesToShow: 2
                  }
              },
              {
                  breakpoint: 480,
                  settings: {
                      arrows: true,
                      centerMode: true,
                      centerPadding: '0',
                      slidesToShow: 1
                  }
              }
            ]
        });


        $('.award-list').slick({
            centerMode: true,
            centerPadding: '0',
            slidesToShow: 3,
            focusOnSelect: true,
            autoplay: true,
            variableWidth: true,
            initialSlide:1,
            responsive: [
              {
                  breakpoint: 780,
                  settings: {
                      arrows: true,
                      centerMode: true,
                      centerPadding: '0',
                      slidesToShow: 2
                  }
              },
              {
                  breakpoint: 480,
                  settings: {
                      arrows: true,
                      centerMode: true,
                      centerPadding: '0',
                      slidesToShow: 1
                  }
              }
            ]
        });
    }


	function goshow(yy)
    {
	    $.ajax({
	        url: "/WebSite/GetPrizeList/",
	        data: { yy: yy },
	        cache: false,
	        type: "POST",
	        success: function (data) {
	            $("#awardList").html("");
	            if ($('#hd').val()==yy)
	            {
	                yy = yy+"etc";
	            }
	            var markup = "";
	            for (var x = 0; x < data.length; x++) {
	                markup += "<div name=\""+yy+"\"><img src=\"/File/Get?FileId=" + data[x].Img + "\" alt=\"\"><p class=\"award_prol\">" + data[x].Title + "</p></div>";
	            }
	            $("#awardList").html(markup);
	            $('.award-list').slick('unslick'); /* ONLY remove the classes and handlers added on initialize */
	            //$('.slick-slide').remove(); /* Remove current slides elements, in case that you want to show new slides. */
	            $('#awardList>div[name!="'+yy+'"]').remove();
	            $('#hd').val(yy);
	            $('#awardList>div[name="test"]').remove();
	            $('.award-list').slick(getSliderSettings()); /* Initialize the slick again */
	        },
	        error: function (reponse) {
	            alert("error : " + reponse);
	        }
	    });

	}

	function getSliderSettings() {
	    return {
	        centerMode: false,
	        centerPadding: '0',
	        slidesToShow: 3,
	        focusOnSelect: true,
	        autoplay: true,
          initialSlide:0,
	        responsive: [
              {
                  breakpoint: 768,
                  settings: {
                      arrows: true,
                      centerMode: true,
                      centerPadding: '0',
                      slidesToShow: 2
                  }
              },
              {
                  breakpoint: 480,
                  settings: {
                      arrows: true,
                      centerMode: true,
                      centerPadding: '0',
                      slidesToShow: 1
                  }
              }
	        ]
	    }
	}


	function gohref(yy)
	{
	    location.href = "/WebSite/About?yy=" + yy;
	}
</script>

<section class="about-01 page-content">
    <div class="row">
        <div class="small-12 medium-6 large-6 columns">
            <h2><span class="red">台灣</span>豐田</h2>
            <h2 class="eng">About Us</h2>
            <p class="text description">本公司前身為和泰汽車大型車產業車輛部門，秉持顧客第一的信念，提供各產業界顧客， 超越期待的創新、安全的優質產品與服務。2003年元月，自母公司和泰汽車分社化，獨立為台灣豐田產業機械股份有限公司，專營TOYOTA產業車輛銷售、售後服務、零件進(出) 口及租賃業務。</p>
            <p class="text description">台灣豐田產業機械股份有限公司自和泰時期至今，累積幾十年產業車輛銷售與維修的經驗與knowhow，一直致力於提供顧客最完善的服務，並於2008年起，導入 ISO14001環境管理系統來提昇廠區環境安全水準;在維修技術上，所有技術員每年除須接受總公司舉辦之技術研習教育外，並須逐級參與總公司辦理的分級技能檢定測驗，透過完整的培訓，提供顧客最佳的售後服務。</p>
        </div>
    </div>
    <img src="/Content/images/about/bg_about_01@2x.png" alt="" class="about-01-img">
</section>
<section class="about-02 page-content">
    <div class="row">
        <div class="small-12 medium-6 medium-offset-6 large-6 large-offset-6 columns">
            <div class="about-02-text">
                <h2>服務與拓展</h2>
                <h2 class="eng">Service and Development</h2>
                <p class="text description">公司主要利用「行動服務車」提供顧客到場維修保養的服務，加大服務的深度與廣度，創造顧客用車最大利益。不斷的自我鞭策、追求顧客滿意的理念，是台灣豐田產業機械股份有限公司能夠獲得國內眾多企業及車主肯定與愛護的主因。</p>
                <p class="text description">2008年為配合集團大陸事業發展計畫，以及擴大本公司事業規模，於上海市成立「上海和乾物流設備貿易有限公司」，提供最完善的服務給予上海市區域的客戶。</p>
            </div>
        </div>
    </div>
    <img src="/Content/images/about/bg_about_02@2x.png" alt="" class="about-02-img">
</section>
