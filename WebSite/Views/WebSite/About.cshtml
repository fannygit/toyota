    <div class="row">
        <div class="small-12 columns">
            <h2><span class="red">榮耀</span>與<span class="red">肯定</span></h2>
            <h2 class="eng">Honor</h2>

            <div class="slider honor-year">
                @foreach (var i in Model.YearsList)
                {
                    <div onclick="goshow(@i)"><h3>@i</h3></div>
                }
            </div>
