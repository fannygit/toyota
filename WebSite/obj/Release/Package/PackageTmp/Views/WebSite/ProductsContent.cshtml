<div class="mobile_section_btn active rippler-default rippler" id="Technology" style="border-top: #fff 1px solid;"> 技術 / <span>Technology</span></div>
<section class="technology mainContent pageSection" id="technology">
    <div class="sectionTitle" style="padding-top: 0;">
        @Html.Raw(HttpUtility.HtmlDecode(Model.Introduction))
    </div>
</section>
<div class="mobile_section_btn rippler-default rippler" id="Specification"> 詳細規格 / <span>Specifications</span></div>
<section class="specification mainContent pageSection " id="specification">
    <div class="content">
        <div class="title_container center">
            <h2><span class="red">詳細</span>規格</h2>
            <h2 class="eng">Specifications</h2>
        </div>
        @if (Model.EngineId == (Convert.ToInt16((int)Begonia.Toyota.WebSite.Enums.ProductEngineType.內燃)).ToString())
        {
            <div class="spc_tab row">
                <a href="javascript: void(0)" class="item small-6 columns active">汽油 </a>
                <a href="javascript: void(0)" class="item small-6 columns"> 柴油 </a>
            </div>
            <div class="gap">
            </div>
            <div class="spe_main table-scroll">
                @Html.Raw(HttpUtility.HtmlDecode(Model.DetailGas))
                @Html.Raw(HttpUtility.HtmlDecode(Model.DetailDiesel))
            </div>
            if (!string.IsNullOrEmpty(Model.DetailOverlookImg))
            {
                <!-- <p class="mark_annotation"><img src="/content/images/zomm_2_03.png" alt=""> 點擊下方圖片可放大</p> -->
                <p class="mark_annotation">點擊下方圖片可放大</p>
