                    <img src="@Url.Content("~/File/Get?FileId=" + Model.DetailOverlookImg)" alt="" class="" width="710" height="auto">
                </a>
            }
            else
            {

                <br />
            }
            <div style="clear:both;"></div>
            <p class="spe_title" style="">引擎規格表</p>
            <div class="spe_main table-scroll">
                @Html.Raw(HttpUtility.HtmlDecode(Model.DetailEngineTable))
            </div>
        }
        else
        {
            <div class="spc_tab row">
                <a href="javascript: void(0)" class="item small-6 columns active">電動 </a>
            </div>
            <div class="gap">
            </div>
            <div class="spe_main table-scroll">
                @Html.Raw(HttpUtility.HtmlDecode(Model.DetailElectric))
            </div>
            if (!string.IsNullOrEmpty(Model.DetailOverlookImg))
            {
                <p class="mark_annotation"><img src="/content/images/zomm_2_03.png" alt=""> 點擊下方圖片可放大</p>
                <a class="openLarge" href="javascript: void(0)" data-open="picOpenLarge">
                    <img src="@Url.Content("~/File/Get?FileId=" + Model.DetailOverlookImg)" alt="" class="" width="710" height="auto">
                </a>
            }
            else
            {

                <br />
            }
            <div class="spe_main table-scroll">
                <p class="spe_title" style="">電瓶與馬達規格表</p>
                @Html.Raw(HttpUtility.HtmlDecode(Model.DetailMotorBatteryTable))
            </div>

        }




</section>
