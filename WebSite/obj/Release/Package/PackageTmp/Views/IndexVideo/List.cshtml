@model Begonia.Toyota.WebSite.Models.IndexVideoListModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string CurrentController = string.Empty;
    if (ViewContext.RouteData.Values["Controller"] != null)
    {
        CurrentController = ViewContext.RouteData.Values["Controller"].ToString();
    }
}


<article class="BOX" id="CONTENT_1">
    @{
        Html.RenderPartial("_MenuPartial");
    }

    <article id="RIGHT_BOX" class="CONTENT_R">
        <article id="POS">
            您當前位置是：<a href="#">首頁管理</a> > <a href="~/IndexVideo/List">首頁影片</a> > <span class="NOW">列表</span>
        </article>
        <nav id="BOX_NAV">
        </nav>
        <section id="R_CONTENT_BOX">
            <article class="RBOX" id="R_CONTENT_1">
            @using (Html.BeginForm("List", CurrentController, FormMethod.Get, new { @class = "pure-form", id = "f1" }))
            {
                <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab1">
                    <tr>
                        <td align="right" class="table1_title onn2">影片標題：</td>
                        <td class="table1_text">
                            @Html.TextBoxFor(p => p.Search, new { placeholder = "搜尋文字", @class = "t1" })
                        </td>
                    </tr>
                    <tr>
                        <td align="right" class="table1_title onn2">狀態：</td>
                        <td class="table1_text">
                            <input type="radio" name="SStatus" id="SStatus" value="-1" @(Model.SStatus == -1 ? "checked" : "") />
                            不限&nbsp;&nbsp;
                            <input type="radio" name="SStatus" id="SStatus" value="1" @(Model.SStatus == 1 ? "checked" : "") />
                            顯示&nbsp;&nbsp;
                            <input type="radio" name="SStatus" id="SStatus" value="0" @(Model.SStatus == 0 ? "checked" : "") />
                            隱藏&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td align="right" class="onn2">&nbsp;</td>
                        <td><span class="BTN1"><a href="#" onclick="goSubmit()">查詢</a></span></td>
                    </tr>
                </table>
            }
                <span class="BTN1" style="float:right "><a href="~/IndexVideo/Add?page=@Model.Page">新增</a></span> <br /><br />
                <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab2">
                    <tr>
                        
                        <td width="30%" align="center" class="table2_title tbg_1"><a href="~/IndexVideo/List?orderby=@Model.OrderBy&page=@Model.Page">影片標題</a></td>
                        <td width="20%" align="center" class="table2_title tbg_2">預覽影片連結</td>
                        <td width="20%" align="center" class="table2_title tbg_2">圖片(mobile)</td>
                        <td width="10%" align="center" class="table2_title tbg_2">狀態</td>
                        <td width="10%" align="center" class="table2_title tbg_2">編輯</td>
                        <td width="10%" align="center" class="table2_title tbg_3">刪除</td>
                    </tr>
                    @foreach (var Row in Model.Data)
                    {
                        <tr>
                            
                            <td align="left" style="word-break: break-all" class="table2_text">@Row.VideoTitle</td>
                            <td align="center" class="table2_text"><a href="@Row.ReviewUrl">@Row.ReviewUrl</a></td>
                            <td align="center" class="table2_text">
                                @if (string.IsNullOrEmpty(Row.MobileImg))
                                {
                                    <img style='width:100px' src="@Url.Content("~/Content/images/default.png")" />

                                }
                                else
                                {
                                    <img style='width:100px' src="@Url.Content("~/File/Get?FileId=" + Row.MobileImg)" />
                                }
                            </td>
                            <td align="center" class="table2_text">@((Row.Status) ? "啟用" : "停用")</td>
                            <td align="center" class="table2_text"><a href="~/IndexVideo/Edit?id=@Row.Id&page=@Model.Page&Search=@Model.Search&SStatus=@Model.SStatus"><img src="/manage/images/icon_edit.png" width="21" height="21" class="imgover"></a></td>
                            <td align="center" class="table2_text r_line"><a href="#" onclick="del('/IndexVideo/Delete', '@Row.Id', '@Model.Page')"><img src="/manage/images/icon_delete.png" width="17" height="17" class="imgover"></a></td>
                        </tr>
                    }
                    @*<tr>
                            <td colspan="5" align="left" class="table2_text l_line">全選：<select name="select2" id="select2" class="t1"><option>請選擇</option></select><span class="BTN2"><a href="#">提交</a></span></td>
                            <td colspan="7" align="right" class="table2_text r_line"><span class="BTN3"><a href="#">更新排序</a></span></td>
                        </tr>*@
                </table>
                @{
                    Request.RequestContext.RouteData.Values.Add("OrderField", Model.OrderField);
                    Request.RequestContext.RouteData.Values.Add("OrderBy", Model.OrderBy - 1);
                    Request.RequestContext.RouteData.Values.Add("Search", Model.Search);
                    Request.RequestContext.RouteData.Values.Add("SStatus", Model.SStatus);
                    @Html.Partial("_Pager", (Begonia.Toyota.WebSite.Models.PagerModel)Model)
                }
            </article>
        </section>
    </article>
</article>

